{
    "preset": "symfony",
    "rules": {
        "declare_strict_types": true,
        "fully_qualified_strict_types": true,
        "phpdoc_align": {
            "align": "left"
        },
        "operator_linebreak": {
            "position": "beginning"
        }
    },
    "exclude": [
        "app/Repositories",
        "app/Http/Controllers"
    ]
}